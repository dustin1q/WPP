---
import '../styles/hamburger-nav.css';
import { getCollection } from 'astro:content';

const uiSamples = await getCollection("uiSamples");
const cssSamples = await getCollection("cssSamples");
const uiAccelerators = await getCollection("uiAccelerators");
const layoutExamples = await getCollection("layoutExamples");
const uiPlayground = await getCollection("uiPlayground");
---

<label class="hamburger-menu">
    <input type="checkbox" />
  </label>
  <aside class="sidebar">
    <nav>
        <ul>
            <li><a href="/">Overview</a></li>
            <li>
                <details>  
                    <summary>Native UI</summary> 
                    <ul>
                        <li><a href="/WPP/ui-samples">Overview</a></li>
                        {uiSamples.map((uiSamples) => (
                            <li><a href={"/WPP/ui-samples/"+uiSamples.slug}> {uiSamples.data.title} </a></li>
                        ))}
                    </ul>
                </details>   
            </li>
            <li>
                <details>  
                    <summary>Native CSS</summary> 
                    <ul>
                        <li><a href="/WPP/css-samples">Overview</a></li>
                        {cssSamples.map((cssSamples) => (
                            <li><a href={"/WPP/css-samples/"+cssSamples.slug}> {cssSamples.data.title} </a></li>
                        ))}
                    </ul>
                </details> 
               
            </li>
            <li>
                <details>  
                    <summary>UI Accelerators</summary> 
                    <ul>
                        <li><a href="/WPP/ui-accelerators">Overview</a></li>
                        {uiAccelerators.map((uiAccelerators) => (
                            <li><a href={"/WPP/ui-accelerators/"+uiAccelerators.slug}> {uiAccelerators.data.title} </a></li>
                        ))}
                    </ul>
                </details> 
            </li>
            <li>
                <details>  
                    <summary>Layouts</summary> 
                    <ul>
                        <li><a href="/WPP/layoutExamples">Overview</a></li>
                        {layoutExamples.map((layoutExamples) => (
                            <li><a href={"/WPP/layoutExamples/"+layoutExamples.slug}> {layoutExamples.data.title} </a></li>
                        ))}
                    </ul>
                </details> 
            </li>
            <li>
                <details>  
                    <summary>Playground</summary> 
                    <ul>
                        <li><a href="/WPP/uiPlayground">Overview</a></li>
                        {uiPlayground.map((uiPlayground) => (
                            <li><a href={"/WPP/ui-playground/"+uiPlayground.slug}> {uiPlayground.data.title} </a></li>
                        ))}
                    </ul>
                </details> 
            </li>
            <li>
                <details>  
                    <summary>Design Systems</summary> 
                    <ul>
                        <li><a href="/WPP/design-systems">Overview</a></li>
                        <li><a href={"/WPP/design-systems/tokens"}>Tokens</a></li>
                        <li><a href={"/WPP/design-systems/atoms"}>UI Atoms</a></li>
                    </ul>
                </details> 
            </li>
            <li><a href="#">Build Patterns</a> <sub>comming soon</sub></li>
            <li><a href="/WPP/CSS-Structure">CSS Hierarchy</a></li>
            <li><a href="#">Browser Render Cycle</a> <sub>comming soon</sub></li>
            <li><a href="/WPP/Render-Patterns">Render Patterns</li>
        </ul>
    </nav>
  </aside>
