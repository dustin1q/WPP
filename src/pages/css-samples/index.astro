---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

const uiSamples = await getCollection("cssSamples");

---
<MainLayout title="CSS Samples">
    <ul>
        {uiSamples.map((cssSamples) => (
            <li><a href={"/css-samples/"+cssSamples.slug}> {cssSamples.data.title} </a></li>
            <li> {cssSamples.data.desc}</li>
        ))}
    </ul>

    <p>
        Samples shared, showcase lesser known and emerging capabilities of native CSS.
      </p>
      <p><strong>Coming soon:</strong></p>
      <ul>
        <li>has()</li>
        <li>un-bamanced vs balenced text</li>
        <li>pretty balancing</li>
        <li>container queries</li>
        <li>color-mix</li>
        <li>Layers</li>
        <li>Trig functions</li>
        <li>Subgrid</li>
      </ul>

</MainLayout>
