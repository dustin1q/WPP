---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import '../../styles/sample-cards.css';
const uiSamples = await getCollection("cssSamples");

---
<MainLayout title="CSS Samples">
  <section class="sample-holder">
    
        {uiSamples.map((cssSamples) => (
          <div class="card">
            <h3>{cssSamples.data.title}</h3>
            <p>{cssSamples.data.desc}</p> 
             <a href={"/css-samples/"+cssSamples.slug} aria-label={cssSamples.data.title}> Learn more </a>
          </div>
        ))}
  
  </section>
    <p>
        Samples shared, showcase lesser known and emerging capabilities of native CSS.
      </p>
      <p><strong>Coming soon:</strong></p>
      <ul>
        <li>has()</li>
        <li>un-bamanced vs balenced text</li>
        <li>pretty balancing</li>
        <li>container queries</li>
        <li>color-mix</li>
        <li>Layers</li>
        <li>Trig functions</li>
        <li>Subgrid</li>
      </ul>

</MainLayout>
