---

import MainLayout from '../layouts/MainLayout.astro';
import { Code } from 'astro:components';
import '../styles/live-code.css';

const blockStyles = `body {
  background-color: lightblue;
}

h1 {
  color: white;
  text-align: left;
}

p {
  font-family: verdana;
  font-size: 20px;
}
`;


---

<MainLayout title="Live Code POC">
 
<!-- Syntax highlight some JavaScript code. -->
<Code code={`const foo = 'bar';`} lang="js" />
<!-- Optional: Customize your theme. -->
<Code code={`const foo = 'bar';`} lang="js" theme="dark-plus" />
<!-- Optional: Enable word wrapping. -->
<Code contenteditable="true" code={blockStyles} lang="css"  wrap contenteditable="true"  theme="dark-plus"/>


   
</MainLayout>
