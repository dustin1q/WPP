---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import '../../styles/sample-cards.css';
const nativeCSS = await getCollection("nativeCSS");
const desc:string = "Samples shared, showcase lesser known and modern CSS patterns. The goal in these examples is not to create simple code everyone can understand. It's to provide robust patterns that work really well using modern methods."
     
---
<MainLayout title="Native CSS" desc={desc}>
  <section class="breakout sample-holder">
    
        {nativeCSS.map((cssSamples) => (
          <div class="card">
            <h3>{cssSamples.data.title}</h3>
            <p>{cssSamples.data.desc}</p> 
             <a href={"/native-css/"+cssSamples.slug} aria-label={cssSamples.data.title}> Learn more </a>
          </div>
        ))}
  
  </section>
      <p><strong>Coming soon:</strong></p>
      <ul>
        <li>un-bamanced vs balenced text</li>
        <li>pretty balancing</li>
        <li>container queries</li>
        <li>color-mix</li>
        <li>Layers</li>
        <li>Trig functions</li>
        <li>Subgrid</li>
      </ul>

</MainLayout>

